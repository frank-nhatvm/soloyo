<?xml version="1.0"?>

<config>
    <modules>
        <Soloyo_Campaign>
            <version>0.1.2</version>
        </Soloyo_Campaign>
    </modules>
    <frontend>
        <routers>
            <campaign>
                <use>standard</use>
                <args>
                    <module>Soloyo_Campaign</module>
                    <frontName>campaign</frontName>
                </args>
            </campaign>
        </routers>
        <layout>
            <updates>
                <campaign>
                    <file>campaign.xml</file>
                </campaign>
            </updates>
        </layout>
        <translate>
            <modules>
                <Soloyo_Campaign>
                    <files>
                        <default>Soloyo_Campaign.csv</default>
                    </files>
                </Soloyo_Campaign>
            </modules>
        </translate>
    </frontend>
    <admin>
        <routers>
            <campaignadmin>
                <use>admin</use>
                <args>
                    <module>Soloyo_Campaign</module>
                    <frontName>campaignadmin</frontName>
                </args>
            </campaignadmin>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <campaign>
                    <file>campaign.xml</file>
                </campaign>
            </updates>
        </layout>
        <translate>
            <modules>
                <Soloyo_Campaign>
                    <files>
                        <default>Soloyo_Campaign.csv</default>
                    </files>
                </Soloyo_Campaign>
            </modules>
        </translate>
    </adminhtml>
    <global>
        <models>
            <campaign>
                <class>Soloyo_Campaign_Model</class>
                <resourceModel>campaign_mysql4</resourceModel>
            </campaign>
            <campaign_mysql4>
                <class>Soloyo_Campaign_Model_Mysql4</class>
                <entities>
                    <affplayer>
                        <table>affplayer</table>
                    </affplayer>
                    <campaign>
                        <table>campaign</table>
                    </campaign>
                </entities>
            </campaign_mysql4>
        </models>
        <resources>
            <campaign_setup>
                <setup>
                    <module>Soloyo_Campaign</module>
                    <class>Mage_Customer_Model_Entity_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </campaign_setup>
            <campaign_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </campaign_write>
            <campaign_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </campaign_read>
        </resources>
        <blocks>
            <campaign>
                <class>Soloyo_Campaign_Block</class>
            </campaign>
        </blocks>
        <helpers>
            <campaign>
                <class>Soloyo_Campaign_Helper</class>
            </campaign>
        </helpers>
        <!-- <events>
            <controller_action_predispatch>
                <observers>
                    <campaign_observers>
                        <class>campaign/observer</class>
                        <method>controllerActionPredispatch</method>
                    </campaign_observers>
                </observers>
            </controller_action_predispatch>
        </events> -->
    </global>
</config>