<?xml version="1.0"?>

<config>
    <modules>
        <Soloyo_Printer>
            <version>0.1.0</version>
        </Soloyo_Printer>
    </modules>
    <frontend>
        <routers>
            <printer>
                <use>standard</use>
                <args>
                    <module>Soloyo_Printer</module>
                    <frontName>printer</frontName>
                </args>
            </printer>
        </routers>
        <layout>
            <updates>
                <printer>
                    <file>printer.xml</file>
                </printer>
            </updates>
        </layout>
        <translate>
            <modules>
                <Soloyo_Printer>
                    <files>
                        <default>Soloyo_Printer.csv</default>
                    </files>
                </Soloyo_Printer>
            </modules>
        </translate>
    </frontend>
    <admin>
        <routers>
            <printeradmin>
                <use>admin</use>
                <args>
                    <module>Soloyo_Printer</module>
                    <frontName>printeradmin</frontName>
                </args>
            </printeradmin>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <printer>
                    <file>printer.xml</file>
                </printer>
            </updates>
        </layout>
        <translate>
            <modules>
                <Soloyo_Printer>
                    <files>
                        <default>Soloyo_Printer.csv</default>
                    </files>
                </Soloyo_Printer>
            </modules>
        </translate>
    </adminhtml>   
    <global>
        <models>
            <printer>
                <class>Soloyo_Printer_Model</class>
                <resourceModel>printer_mysql4</resourceModel>
            </printer>
            <printer_mysql4>
                <class>Soloyo_Printer_Model_Mysql4</class>
                <entities>
                    <printer>
                        <table>printer</table>
                    </printer>
                </entities>
            </printer_mysql4>
        </models>
        <resources>
            <printer_setup>
                <setup>
                    <module>Soloyo_Printer</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </printer_setup>
            <printer_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </printer_write>
            <printer_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </printer_read>
        </resources>
        <blocks>
            <printer>
                <class>Soloyo_Printer_Block</class>
            </printer>
        </blocks>
        <helpers>
            <printer>
                <class>Soloyo_Printer_Helper</class>
            </printer>
        </helpers>
        <!-- <events>
            <controller_action_predispatch>
                <observers>
                    <printer_observers>
                        <class>printer/observer</class>
                        <method>controllerActionPredispatch</method>
                    </printer_observers>
                </observers>
            </controller_action_predispatch>
        </events> -->
    </global>
</config>