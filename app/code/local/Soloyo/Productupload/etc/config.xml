<?xml version="1.0"?>

<config>
    <modules>
        <Soloyo_Productupload>
            <version>0.1.9</version>
        </Soloyo_Productupload>
    </modules>
    <frontend>
        <routers>
            <productupload>
                <use>standard</use>
                <args>
                    <module>Soloyo_Productupload</module>
                    <frontName>productupload</frontName>
                </args>
            </productupload>
        </routers>
        <layout>
            <updates>
                <productupload>
                    <file>productupload.xml</file>
                </productupload>
            </updates>
        </layout>
        <translate>
            <modules>
                <Soloyo_Productupload>
                    <files>
                        <default>Soloyo_Productupload.csv</default>
                    </files>
                </Soloyo_Productupload>
            </modules>
        </translate>
    </frontend>
    <admin>
        <routers>
            <productuploadadmin>
                <use>admin</use>
                <args>
                    <module>Soloyo_Productupload</module>
                    <frontName>productuploadadmin</frontName>
                </args>
            </productuploadadmin>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <productupload>
                    <file>productupload.xml</file>
                </productupload>
            </updates>
        </layout>
        <translate>
            <modules>
                <Soloyo_Productupload>
                    <files>
                        <default>Soloyo_Productupload.csv</default>
                    </files>
                </Soloyo_Productupload>
            </modules>
        </translate>
    </adminhtml>   
    <global>
        <models>
            <productupload>
                <class>Soloyo_Productupload_Model</class>
                <resourceModel>productupload_mysql4</resourceModel>
            </productupload>
            <productupload_mysql4>
                <class>Soloyo_Productupload_Model_Mysql4</class>
                <entities>
                    <productupload>
                        <table>productupload</table>
                    </productupload>
                    <imageprint>
                        <table>imageprint</table>
                    </imageprint>
                    <designer>
                        <table>designer</table>
                    </designer>
                    <designertransaction>
                        <table>designertransaction</table>
                    </designertransaction>
                    <requestproduct>
                        <table>requestproduct</table>
                    </requestproduct>
                    <mockup>
                        <table>mockup</table>
                    </mockup>
                </entities>
            </productupload_mysql4>
        </models>
        <resources>
            <productupload_setup>
                <setup>
                    <module>Soloyo_Productupload</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </productupload_setup>
            <productupload_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </productupload_write>
            <productupload_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </productupload_read>
        </resources>
        <blocks>
            <productupload>
                <class>Soloyo_Productupload_Block</class>
            </productupload>
        </blocks>
        <helpers>
            <productupload>
                <class>Soloyo_Productupload_Helper</class>
            </productupload>
        </helpers>
        <!-- <events>
            <controller_action_predispatch>
                <observers>
                    <productupload_observers>
                        <class>productupload/observer</class>
                        <method>controllerActionPredispatch</method>
                    </productupload_observers>
                </observers>
            </controller_action_predispatch>
        </events> -->
    </global>
</config>